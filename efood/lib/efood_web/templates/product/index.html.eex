<h4>Product Catalog</h4>

<%= form_for @conn, Routes.product_path(@conn, :index), [method: :get, class: "pull-right"], fn f -> %>
  <%= search_input f, :query %>
  <%= submit "Search" %>
<% end %>

<ul class="collection">
  <%= for product <- @products do %>
    <li class="collection-item">
      <%= link product.product_name, to: Routes.product_path(@conn, :show, product) %>
    </li>
  <% end %>
</ul>
